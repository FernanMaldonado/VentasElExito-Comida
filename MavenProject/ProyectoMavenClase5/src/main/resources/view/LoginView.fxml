<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="org.fernandomaldonado.controller.LoginController">
    <stylesheets>
        <URL value="@/view/loginview.css" />
    </stylesheets>
    
    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
         <Button fx:id="btnRegresar" mnemonicParsing="false" onAction="#Regresar" text="Button" />

            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Iniciar Sesión" />

            <TextField fx:id="txtUsuario" maxWidth="250" promptText="Usuario" />
            <PasswordField fx:id="txtPassword" maxWidth="250" promptText="Contraseña" />

            <Button maxWidth="250" onAction="#loginAction" text="Ingresar" />

            <Label fx:id="lblMensaje" style="-fx-text-fill: red;" />
        </VBox>
    </children>
</AnchorPane>
